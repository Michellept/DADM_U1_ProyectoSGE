<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#5800B0FF"
        android:columnCount="1"
        android:foregroundGravity="center"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:paddingRight="15dp"
        android:rowCount="3">

        <Button
            android:id="@+id/btn_datospersonales"
            android:layout_width="202dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Datos Personales" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_horario"
            android:layout_width="193dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/teal_700"
            android:layout_marginTop="20dp"
            android:text="Horario" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_reticula"
            android:layout_width="199dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_700"
            android:text="Avance Reticular" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_kardex"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_700"
            android:text="Kardex" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_evaluacion"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/teal_700"
            android:text="Evaluacion Docente" />


        <Button
            android:id="@+id/btn_cerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cerrar"
            android:layout_gravity="center"
            ></Button>


    </GridLayout>



</LinearLayout>